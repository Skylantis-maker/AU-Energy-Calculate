{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python@3.1.30",
            "config": {
                "runtime": "python3.9"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PYTHON_VERSION": "3.9"
    }
} 